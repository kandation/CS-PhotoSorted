<Window x:Class="photoSorted.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photoSorted"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Grid">
        <Button x:Name="ButtonBrowse" Content="Select Folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="browse_folder"/>
        <TextBox x:Name="TextPathBox" HorizontalAlignment="Left" Height="20" Margin="85,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422" IsReadOnly="True"/>
        <TextBox x:Name="DetailBox" HorizontalAlignment="Left" Height="227" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <TextBlock x:Name="TextStatisticBox" HorizontalAlignment="Left" Margin="10,267,0,0" TextWrapping="Wrap" Text="Counter = 0" VerticalAlignment="Top"/>
        <Button x:Name="PPB" Content="Process" HorizontalAlignment="Left" Margin="432,268,0,0" VerticalAlignment="Top" Width="75" Height="41" IsEnabled="False" Click="do_process"/>

    </Grid>
</Window>
